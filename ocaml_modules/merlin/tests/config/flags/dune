(alias
 (name runtest)
 (deps invalid.t)
 (action
   (progn
     (setenv MERLIN %{exe:../../merlin-wrapper}
       (run %{bin:mdx} test --syntax=cram %{deps}))
     (diff? %{deps} %{deps}.corrected))))

(alias
 (name runtest)
 (deps nolabels.t)
 (action
   (progn
     (setenv MERLIN %{exe:../../merlin-wrapper}
       (run %{bin:mdx} test --syntax=cram %{deps}))
     (diff? %{deps} %{deps}.corrected))))

(alias
 (name runtest)
 (deps unsafe.t)
 (action
   (progn
     (setenv MERLIN %{exe:../../merlin-wrapper}
       (run %{bin:mdx} test --syntax=cram %{deps}))
     (diff? %{deps} %{deps}.corrected))))
