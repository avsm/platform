(alias
 ((name runtest)
  (deps (environment_on_open.t environment_on_open.ml))
  (action
    (progn
      (setenv MERLIN ${exe:../../merlin-wrapper}
        (run ${bin:cram} ${<}))
      (diff? ${<} ${<}.corrected)))))

