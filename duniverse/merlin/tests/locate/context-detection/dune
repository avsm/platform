(alias
 (name runtest)
 (enabled_if (< %{ocaml_version} 4.08.0))
 (deps (:t environment_on_open_bad.t) environment_on_open.ml)
 (action
   (progn
     (setenv MERLIN %{exe:../../merlin-wrapper}
       (run %{bin:mdx} test --syntax=cram %{t}))
     (diff? %{t} %{t}.corrected))))

