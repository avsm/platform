(alias
 (name runtest)
 (deps (:t all_local.t) all_local.ml)
 (action
   (progn
     (setenv MERLIN %{exe:../../merlin-wrapper}
       (run %{bin:mdx} test --syntax=cram %{t}))
     (diff? %{t} %{t}.corrected))))

